@model EMS.Entities.Branch

@{
    ViewData["Title"] = "CreateBranch";
}



<h4>Add New Branch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBranch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="BranchName" class="control-label"></label>
                <input asp-for="BranchName" class="form-control my-2" />
                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchHead" class="control-label"></label>
                <input asp-for="BranchHead" class="form-control my-2" />
                <span asp-validation-for="BranchHead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control my-2" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="BranchList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
